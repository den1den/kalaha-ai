<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ai-marble-game" default="compile.module.ai-marble-game">
    <dirname property="module.ai-marble-game.basedir" file="${ant.file.module_ai-marble-game}"/>

    <property name="module.jdk.home.ai-marble-game" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.ai-marble-game" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.ai-marble-game" value="${project.jdk.classpath}"/>

    <property name="compiler.args.ai-marble-game" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>

    <property name="ai-marble-game.output.dir" value="${module.ai-marble-game.basedir}/out/production/ai-marble-game"/>
    <property name="ai-marble-game.testoutput.dir" value="${module.ai-marble-game.basedir}/out/test/ai-marble-game"/>

    <path id="ai-marble-game.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="ai-marble-game.module.production.classpath">
        <path refid="${module.jdk.classpath.ai-marble-game}"/>
        <pathelement location="${idea.home}/lib/groovy-all-2.4.6.jar"/>
        <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
        <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
        <path refid="library.org.apache.clerezza.ext:org.json.simple:0.4.classpath"/>
        <pathelement location="${basedir}/json-simple-1.1.jar"/>
    </path>

    <path id="ai-marble-game.runtime.production.module.classpath">
        <pathelement location="${ai-marble-game.output.dir}"/>
        <pathelement location="${idea.home}/lib/groovy-all-2.4.6.jar"/>
        <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
        <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
        <path refid="library.org.apache.clerezza.ext:org.json.simple:0.4.classpath"/>
        <pathelement location="${basedir}/json-simple-1.1.jar"/>
    </path>

    <path id="ai-marble-game.module.classpath">
        <path refid="${module.jdk.classpath.ai-marble-game}"/>
        <pathelement location="${ai-marble-game.output.dir}"/>
        <pathelement location="${idea.home}/lib/groovy-all-2.4.6.jar"/>
        <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
        <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
        <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
        <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
        <path refid="library.org.apache.clerezza.ext:org.json.simple:0.4.classpath"/>
        <pathelement location="${basedir}/json-simple-1.1.jar"/>
    </path>

    <path id="ai-marble-game.runtime.module.classpath">
        <pathelement location="${ai-marble-game.testoutput.dir}"/>
        <pathelement location="${ai-marble-game.output.dir}"/>
        <pathelement location="${idea.home}/lib/groovy-all-2.4.6.jar"/>
        <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
        <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
        <pathelement location="${idea.home}/lib/hamcrest-core-1.3.jar"/>
        <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
        <path refid="library.org.apache.clerezza.ext:org.json.simple:0.4.classpath"/>
        <pathelement location="${basedir}/json-simple-1.1.jar"/>
    </path>


    <patternset id="excluded.from.module.ai-marble-game">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.ai-marble-game">
        <patternset refid="excluded.from.module.ai-marble-game"/>
    </patternset>

    <path id="ai-marble-game.module.sourcepath">
        <dirset dir="${module.ai-marble-game.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.ai-marble-game"
            depends="compile.module.ai-marble-game.production,compile.module.ai-marble-game.tests"
            description="Compile module ai-marble-game"/>

    <target name="compile.module.ai-marble-game.production" depends="register.custom.compilers"
            description="Compile module ai-marble-game; production classes">
        <mkdir dir="${ai-marble-game.output.dir}"/>
        <javac2 destdir="${ai-marble-game.output.dir}" debug="${compiler.debug}"
                nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true"
                executable="${module.jdk.bin.ai-marble-game}/javac">
            <compilerarg line="${compiler.args.ai-marble-game}"/>
            <bootclasspath refid="ai-marble-game.module.bootclasspath"/>
            <classpath refid="ai-marble-game.module.production.classpath"/>
            <src refid="ai-marble-game.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.ai-marble-game"/>
        </javac2>

        <copy todir="${ai-marble-game.output.dir}">
            <fileset dir="${module.ai-marble-game.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.ai-marble-game.tests"
            depends="register.custom.compilers,compile.module.ai-marble-game.production"
            description="compile module ai-marble-game; test classes" unless="skip.tests"/>

    <target name="clean.module.ai-marble-game" description="cleanup module">
        <delete dir="${ai-marble-game.output.dir}"/>
        <delete dir="${ai-marble-game.testoutput.dir}"/>
    </target>
</project>